# MILS DEALS - Apache Server Configuration
# .htaccess
# Last Updated: 2025-01-20

# Enable rewrite engine
RewriteEngine On

# Force HTTPS (uncomment when you have SSL certificate)
# RewriteCond %{HTTPS} off
# RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# ----------------------------------------------------------------------
# SECURITY HEADERS
# ----------------------------------------------------------------------

# Content Security Policy
Header always set Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' https://trusted-cdn.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data: https:; connect-src 'self'; frame-src 'self' https://www.openstreetmap.org;"

# Strict Transport Security (uncomment with HTTPS)
# Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"

# Prevent clickjacking
Header always set X-Frame-Options "SAMEORIGIN"

# Prevent MIME type sniffing
Header always set X-Content-Type-Options "nosniff"

# XSS Protection
Header always set X-XSS-Protection "1; mode=block"

# Referrer Policy
Header always set Referrer-Policy "strict-origin-when-cross-origin"

# Permissions Policy
Header always set Permissions-Policy "camera=(), microphone=(), geolocation=self, payment=()"

# Remove server information
ServerTokens Prod
Header always unset X-Powered-By
Header always unset X-AspNet-Version
Header always unset X-AspNetMvc-Version

# ----------------------------------------------------------------------
# CACHING & COMPRESSION
# ----------------------------------------------------------------------

# Enable compression
<IfModule mod_deflate.c>
    SetOutputFilter DEFLATE
    SetEnvIfNoCase Request_URI \.(?:gif|jpe?g|png)$ no-gzip dont-vary
    SetEnvIfNoCase Request_URI \.(?:exe|t?gz|zip|bz2|sit|rar)$ no-gzip dont-vary
    SetEnvIfNoCase Request_URI \.pdf$ no-gzip dont-vary
    
    # Compress HTML, CSS, JavaScript, Text, XML and fonts
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/xml
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE application/xhtml+xml
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/x-javascript
    AddOutputFilterByType DEFLATE application/json
    AddOutputFilterByType DEFLATE font/ttf
    AddOutputFilterByType DEFLATE font/otf
    AddOutputFilterByType DEFLATE font/woff
    AddOutputFilterByType DEFLATE font/woff2
</IfModule>

# Browser caching
<IfModule mod_expires.c>
    ExpiresActive On
    
    # Default expiration: 1 hour after access
    ExpiresDefault "access plus 1 hour"
    
    # CSS and JS
    ExpiresByType text/css "access plus 1 year"
    ExpiresByType application/javascript "access plus 1 year"
    ExpiresByType application/x-javascript "access plus 1 year"
    
    # Images
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType image/x-icon "access plus 1 year"
    
    # Fonts
    ExpiresByType font/woff "access plus 1 year"
    ExpiresByType font/woff2 "access plus 1 year"
    ExpiresByType application/font-woff "access plus 1 year"
    
    # HTML
    ExpiresByType text/html "access plus 1 hour"
    
    # XML
    ExpiresByType application/xml "access plus 1 hour"
</IfModule>

# Cache-Control Headers
<IfModule mod_headers.c>
  \
# ----------------------------------------------------------------------
# REDIRECTS & REWRITES
# ----------------------------------------------------------------------

# Redirect trailing slashes to non-slash version
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)/$ /$1 [L,R=301]

# Redirect www to non-www (or vice versa - choose one)
# RewriteCond %{HTTP_HOST} ^www\.milsdeals\.com [NC]
# RewriteRule ^(.*)$ https://milsdeals.com/$1 [L,R=301]

# Custom 404 Error Page
ErrorDocument 404 /404.html

# Custom 500 Error Page
ErrorDocument 500 /500.html

# Redirect old pages (example - add your own redirects as needed)
# Redirect 301 /old-page.html /new-page.html

# ----------------------------------------------------------------------
# FILE ACCESS RESTRICTIONS
# ----------------------------------------------------------------------

#-------------------------------------------------------------------
# MIME TYPES
# ----------------------------------------------------------------------

<IfModule mod_mime.c>
    # Web fonts
    AddType application/font-woff .woff
    AddType application/font-woff2 .woff2
    AddType application/vnd.ms-fontobject .eot
    AddType application/x-font-ttf .ttf
    AddType font/opentype .otf
    
    # Images
    AddType image/webp .webp
    AddType image/svg+xml .svg
    
    # Other
    AddType application/json .json
    AddType application/ld+json .jsonld
</IfModule>

# ----------------------------------------------------------------------
# PERFORMANCE OPTIMIZATIONS
# ----------------------------------------------------------------------

# Enable Keep-Alive
<IfModule mod_headers.c>
    Header set Connection keep-alive
</IfModule>

# ETag removal for better caching
FileETag None

# ----------------------------------------------------------------------
# SEO & USER EXPERIENCE
# ----------------------------------------------------------------------

# Redirect non-existing pages to 404
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule . /404.html [L]

# Clean URLs - Remove .html extension
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}\.html -f
RewriteRule ^(.*)$ $1.html [L]

# Alternative: Pretty URLs (uncomment if you want clean URLs)
# RewriteRule ^deals/?$ deals.html [NC,L]
# RewriteRule ^about/?$ about.html [NC,L]
# RewriteRule ^contact/?$ contact.html [NC,L]
# RewriteRule ^enquiry/?$ enquiry.html [NC,L]
# RewriteRule ^signin/?$ signin.html [NC,L]

# ----------------------------------------------------------------------
# BOT & CRAWLER MANAGEMENT
# ----------------------------------------------------------------------

# Allow good bots
SetEnvIfNoCase User-Agent "Googlebot" good_bot
SetEnvIfNoCase User-Agent "Bingbot" good_bot
SetEnvIfNoCase User-Agent "Slurp" good_bot
SetEnvIfNoCase User-Agent "DuckDuckBot" good_bot
SetEnvIfNoCase User-Agent "Baiduspider" good_bot

# ----------------------------------------------------------------------
# MOBILE OPTIMIZATIONS
# ----------------------------------------------------------------------

# Detect mobile devices (optional)
<IfModule mod_setenvif.c>
    SetEnvIf User-Agent ".*Android.*" android
    SetEnvIf User-Agent ".*iPhone.*" iphone
    SetEnvIf User-Agent ".*iPad.*" ipad
    SetEnvIf User-Agent ".*BlackBerry.*" blackberry
    SetEnvIf User-Agent ".*Windows Phone.*" windows_phone
</IfModule>

# ----------------------------------------------------------------------
# CHARACTER ENCODING
# ----------------------------------------------------------------------

# Use UTF-8 encoding for all text content
AddDefaultCharset utf-8

# ----------------------------------------------------------------------
# FILE UPLOAD LIMITS (if applicable)
# ----------------------------------------------------------------------

# Increase file upload size limit (uncomment if needed)
# LimitRequestBody 10485760

# ----------------------------------------------------------------------
# CUSTOM SETTINGS FOR MILS DEALS
# ----------------------------------------------------------------------

# Set server timezone
SetEnv TZ Africa/Johannesburg

# Custom error logging (optional)
# ErrorLog /path/to/your/error.log
# CustomLog /path/to/your/access.log combined

# ----------------------------------------------------------------------
# MAINTENANCE MODE (uncomment when needed)
# ----------------------------------------------------------------------

# RewriteCond %{REMOTE_ADDR} !^123\.456\.789\.000
# RewriteCond %{REQUEST_URI} !/maintenance\.html$
# RewriteRule ^(.*)$ /maintenance.html [R=302,L]

# ----------------------------------------------------------------------
# FINAL SECURITY MEASURES
# ----------------------------------------------------------------------

# Disable server signature
ServerSignature Off

# Limit request methods
<LimitExcept GET POST>
    Deny from all
</LimitExcept>

# ----------------------------------------------------------------------
# END OF MILS DEALS .htaccess CONFIGURATION
# ----------------------------------------------------------------------